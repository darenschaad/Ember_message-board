{{#if addNewCategory}}
  <h1>New Category</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Category</label>
          {{input value=name id="name"}}
        </div>

        <button {{action 'save'}}>Save Category</button>
      </form>
    </div>
{{else}}
    <button {{action 'categoryFormShow'}}>New Category</button>
{{/if}}
