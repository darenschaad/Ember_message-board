{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{textarea rows="3" cols="80" value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{textarea cols="80" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{textarea rows="2" cols="80" value=notes id="notes"}}
      </div>



      {{#x-select value=category}}
      {{#each model.categories as |category|}}
      {{#x-option value=category}}{{category.name}}{{/x-option}}
      {{/each}}


      {{/x-select}}
      <br>
      <button class="btn btn-primary" {{action 'save' question}}>Submit</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'questionFormShow'}}>Add Question</button>
{{/if}}
