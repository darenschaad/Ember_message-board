{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
      </div>
      <button class="btn btn-primary btn-xs" {{action 'save' question}}>Submit</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'questionFormShow'}}>Add Question</button>
{{/if}}
