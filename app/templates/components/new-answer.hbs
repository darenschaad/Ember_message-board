{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="content">Answer</label>
          {{textarea rows="2" cols="80" value=content id="content"}}
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          {{textarea cols="80" value=author id="author"}}
        </div>

        <button class="btn btn-primary" {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-primary" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
